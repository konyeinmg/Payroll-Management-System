            </GridSplitter.RenderTransform>
        </GridSplitter>
        <GridSplitter x:Name="gridSplitter1" HorizontalAlignment="Left" Height="80" Margin="250,10,0,10" VerticalAlignment="Center" Width="1" RenderTransformOrigin="0.5,0.5" Background="Green">
