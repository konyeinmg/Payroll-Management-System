            </StackPanel>
        </Button>
        <Button x:Name="button3" HorizontalAlignment="Left" Height="60" Margin="157,16,0,0" VerticalAlignment="Top" Width="70" Background="{x:Null}" BorderBrush="{x:Null}" Click="button3_Click">
