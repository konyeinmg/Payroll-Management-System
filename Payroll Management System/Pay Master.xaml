            <StackPanel>
                <Image Source="D:\Nyein Chan Aung\C# Problems\Photos/4.png" Height="40" Width="70"/>
                <TextBlock Text="Allowance" TextAlignment="Center" Width="70" FontSize="10" />
            </StackPanel>
